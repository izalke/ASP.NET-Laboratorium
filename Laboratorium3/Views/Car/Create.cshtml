@model Laboratorium3.Models.Car

<h2>Nowy Samochód</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EngineCapacity"></label>
        <input asp-for="EngineCapacity" class="form-control" />
        <span asp-validation-for="EngineCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Power"></label>
        <input asp-for="Power" class="form-control" />
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EngineType"></label>
        <input asp-for="EngineType" class="form-control" />
        <span asp-validation-for="EngineType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationNumber"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Owner"></label>
        <input asp-for="Owner" class="form-control" />
        <span asp-validation-for="Owner" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj Samochód" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Powrót do listy samochodów</a>
</div>
